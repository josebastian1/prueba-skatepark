<script>
    document.addEventListener('DOMContentLoaded', () => {
        const token = localStorage.getItem("token");
        const adminLink = document.querySelector('.nav-link-admin');
        const participantsLink = document.querySelector('.nav-link-participants');

        // Verifica si el token está presente y no está vacío
        if (token) {
            adminLink.href = `/admin?token=${encodeURIComponent(token)}`;
            participantsLink.href = `/participantes?token=${encodeURIComponent(token)}`;
        } else {
            adminLink.href = '/admin'; // Enlace sin token si no hay token en localStorage
            participantsLink.href = '/participantes'; // Enlace sin token si no hay token en localStorage
        }
    });
</script>
